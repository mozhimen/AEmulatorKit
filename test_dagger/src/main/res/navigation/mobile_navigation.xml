<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mozhimen.emulatork.test.home.HomeFragment"
        android:label="@string/title_home" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.mozhimen.emulatork.test.favorites.FavoritesFragment"
        android:label="@string/favorites" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.mozhimen.emulatork.test.search.SearchFragment"
        android:label="@string/title_search" />

    <fragment
        android:id="@+id/navigation_systems"
        android:name="com.mozhimen.emulatork.test.systems.MetaSystemsFragment"
        android:label="@string/title_systems" >

        <action
            android:id="@+id/action_navigation_systems_to_navigation_games"
            app:destination="@id/navigation_games" />

    </fragment>

    <fragment
        android:id="@+id/navigation_games"
        android:name="com.mozhimen.emulatork.test.games.GamesFragment"
        android:label="@string/title_games">

        <argument
            android:name="system_ids"
            app:argType="string[]"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.mozhimen.emulatork.test.settings.SettingsFragment"
        android:label="@string/title_settings" />

    <fragment
        android:id="@+id/navigation_settings_gamepad"
        android:name="com.mozhimen.emulatork.test.settings.GamepadSettingsFragment"
        android:label="@string/settings_title_gamepad_settings" />

    <fragment
        android:id="@+id/navigation_settings_bios_info"
        android:name="com.mozhimen.emulatork.test.settings.BiosSettingsFragment"
        android:label="@string/settings_title_display_bios_info" />

    <fragment
        android:id="@+id/navigation_settings_advanced"
        android:name="com.mozhimen.emulatork.test.settings.AdvancedSettingsFragment"
        android:label="@string/settings_title_advanced_settings" />

    <fragment
        android:id="@+id/navigation_settings_save_sync"
        android:name="com.mozhimen.emulatork.test.settings.SaveSyncFragment"
        android:label="@string/settings_title_save_sync" />

    <fragment
        android:id="@+id/navigation_settings_cores_selection"
        android:name="com.mozhimen.emulatork.test.settings.CoresSelectionFragment"
        android:label="@string/settings_title_open_cores_selection" />

</navigation>
