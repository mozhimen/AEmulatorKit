<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.gamepad"
        android:required="false" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name=".LemuroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AGameKit_Emulator"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".shared.game.ExternalGameLauncherActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/Theme.AGameKit_Emulator.Game">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="${applicationId}"
                    android:pathPattern="/play-game/id/.*"
                    android:scheme="mozhimen" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.game.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleInstance"
            android:process=":game"
            android:theme="@style/Theme.AGameKit_Emulator.Game" />

        <service
            android:name=".feature.game.GameService"
            android:process=":game" />

        <activity
            android:name=".feature.gamemenu.GameMenuActivity"
            android:process=":game"
            android:theme="@style/Theme.AGameKit_Emulator.Menu" />

        <activity
            android:name=".feature.input.GamePadBindingActivity"
            android:theme="@style/Theme.AGameKit_Emulator.Invisible" />

        <activity
            android:name=".shared.settings.StorageFrameworkPickerLauncher"
            android:theme="@style/Theme.AGameKit_Emulator.Invisible" />

        <activity
            android:name=".shared.gamecrash.GameCrashActivity"
            android:theme="@style/Theme.AGameKit_Emulator.Game" />

        <receiver android:name=".shared.library.LibraryIndexBroadcastReceiver" />

        <receiver android:name=".shared.library.CoreUpdateBroadcastReceiver" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            tools:node="remove" />
    </application>
</manifest>